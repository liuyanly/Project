.cc {
  font-size: 14px;
  color: #4CC6D8;
}
.header-title {
  line-height: 50px;
  border-bottom: 1px solid #eff1fa;
  padding: 0 20px;
  font-size: 14px;
  color: #333;
}
.main-box .container {
  background: none;
}
.head-top {
  padding: 10px 21px;
  border-bottom: 1px solid #eff1fa;
}
.head-top > img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 14px;
}
.head-top .user-info .line1 {
  font-size: 14px;
  color: #666;
}
.head-top .user-info .line1 .name {
  font-size: 14px;
  color: #45C6DA;
  margin-right: 18px;
}
.head-top .user-info .line1 .tag {
  font-size: 12px;
  color: #fff;
  height: 16px;
  padding: 0 8px;
  line-height: 16px;
  background: #4CC6D8;
  border-radius: 7px;
  margin-left: 12px;
  margin-top: 2px;
}
.head-top .user-info .line2 {
  font-size: 12px;
  color: #999;
}
.head-top .user-info .line2 .sex {
  margin-right: 15px;
}
.content-div .title {
  padding: 0 21px;
  border-bottom: 1px solid #f3f7fd;
  line-height: 32px;
  font-size: 14px;
  color: #47C7DB;
}
.content-div .content-word {
  padding: 11px 54px 11px 21px;
  font-size: 14px;
  color: #333;
  line-height: 30px;
  border-bottom: 1px solid #f3f7fd;
}
.content-div > img {
  width: 751px;
  height: 154px;
  margin-left: 54px;
  margin-bottom: 35px;
}
.btn-div {
  margin-bottom: 41px;
}
.btn-div p {
  width: 136px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 3px ;
  cursor: pointer;
  background: #4CC6D8;
  font-size: 14px;
  color: #fff;
}
.btn-div .return-task {
  border: 2px solid #4CC6D8;
  box-sizing: border-box;
  background: #fff;
  font-size: 14px;
  color: #4cc6d8;
  margin-left: 271px;
  margin-right: 61px;
}
.btn-div .accept-task {
  background: #4CC6D8;
  font-size: 14px;
  color: #fff;
}
.btn-div .advice-btn {
  margin-left: 21px;
}
.reason-box .text-div {
  padding: 19px;
}
.reason-box .text-div textarea {
  width: 750px;
  height: 144px;
  border: 1px solid #eee;
  border-radius: 6px;
  padding: 8px 23px;
  box-sizing: border-box;
  resize: none;
  font-size: 14px;
  color: #333;
}
.reason-box .btn-p button {
  width: 136px;
  height: 40px;
  background: #4cc6d8;
  border-radius: 3px ;
  font-size: 14px;
  color: #fff;
  text-align: center;
  line-height: 40px;
  margin-left: 19px;
  border: none;
  cursor: pointer;
}
