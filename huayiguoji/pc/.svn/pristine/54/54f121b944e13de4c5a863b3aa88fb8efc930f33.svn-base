@import "variable";

.consult_list{
  li{
    padding: 10px 15px;
    .borderBottom(1px,solid,#eff1fa);
    .img-p{
      margin-right: 14px;
      img{
        width: 40px;
        height: 40px;
        border-radius: 50%;
      }
    }
    .user-detail{
      width: 253px;
      .person-name{
        .color999(14px,#000);
        margin-top: 5px;
        span{
          color: #999;
        }
        margin-bottom: 7px;
      }
      .hospital-name{
        .color999(12px,#4cc6d8);
      }
      .consult-status{
        .color999(12px,#999);
        line-height: 40px;
      }
    }
    .time{
      .color999(12px,#999);
      margin-left: 116px;
      line-height: 40px;
    }
    .operation{
      margin-right: 16px;
      img{
        margin-top: 13px;
      }
      span{
        display: inline-block;
        width:60px;
        height:24px;
        background:rgba(76,198,216,1);
        border-radius: 3px ;
        color: #fff;
        text-align: center;
        line-height: 24px;
        margin-top: 8px;
      }
    }
  }
}