@import "../../less/variable";
.main .container .right-box{
  height: auto;
  margin-bottom: 30px;
}
.description-content{
  padding: 15px 15px;
  margin-bottom: 22px;
  .description-word{
    p{
      line-height: 30px;
      height: 30px;
    }
    .title-name{
      .color999(14px,#000);
    }
    .content-word{
      .color999(14px,#999);
    }
  }
}
.description-table{
  width: 848px;
  margin: 0 auto;
  tr,td{
    border: 1px solid #e5e5e5;
    text-align: center;
    .color999(14px,#555);
    line-height: 28px;
    height: 29px;
  }
  tr:nth-of-type(2n-1){
    background: #f9f6f6;
  }
  .imp td{
    color:#EE784E;
    .abnormal{
      display: inline-block;
      width: 30px;
    }
  }
  thead .th-tr{
    background: #fff;
  }
  thead td{
    .color999(14px,#000);
    line-height: 28px;
  }
  .w1,.w2,.w3,.w4{
    .color999(14px,#000);
    line-height: 28px;
  }
  .w1{
    width: 134px;
  }
  .w2{
    width: 229px;
  }
  .w3{
    width: 227px;
  }
  .w4{
    width: 254px;
  }
}
.data-table{
  td{
    padding-left: 10px;
    text-align: left;
  }
  .chart-btn{
    cursor: pointer;
  }
}
.data-list{
  padding: 14px 15px;
  margin-bottom: 16px;
  li{
    float: left;
    padding: 0 11px;
    border-radius: 3px;
    line-height: 31px;
    height: 31px;
    .color999(14px,#555);
    background: #EFF1FA;
    margin-bottom: 16px;
    margin-right: 10px;
    cursor: pointer;
    &.current{
      background: #4cc6d8;
      color:#fff;
      .data{
        background: #fff;
        color: #4CC6D8;
      }
    }
    .data{
      width:20px;
      height:20px;
      .color999(12px,#fff);
      line-height: 20px;
      height: 20px;
      text-align: center;
      border-radius: 50%;
      background: #EE774D;
      margin-left: 4px;
      margin-top: 6px;
    }
  }
}
.pic-list{
  padding: 11px 15px;
  margin-bottom: 46px;
  li{
    float: left;
    width:132px;
    height:180px;
    background: #f3f7fd;
    margin-right: 11px;
    margin-bottom: 10px;
    cursor: pointer;
    &:nth-of-type(6){
      margin-right: 0;
    }
    img{
      width:132px;
      height:180px;
    }
  }
}
.fade{
  width: 100%;
  height: 100vh;
  overflow: auto;background: rgba(0,0,0,0.2);
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  .close-box{
    width: 100%;
    height: 100vh;
    overflow: auto;background: rgba(0,0,0,0);
    text-align: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
  }

}
.img-container{
  position: fixed;
  top:0px;
  right: 0px;
  left:0px;
  bottom: 0px;
  text-align: center;
  vertical-align: middle;
  display: -webkit-box;
  display: flex;
  display:-webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  align-items:center;
  .fade{
    z-index: 999;
    position: absolute;
  }
  .img-box{
    text-align: center;
    overflow: auto;
    background: rgba(0,0,0,0);
    z-index: 1000;
    position: relative;
    .img{
      border: 11px solid #fff;
      max-height: 100vh;
    }
    .pic-p{
      font-size: 50px;
      position: absolute;
      top: -10px;
      right: 0;
      color: white;
      cursor: pointer;
    }
    .left-img{
      margin-right: 27px;
      cursor: pointer;
    }
    .right-img{
      margin-left: 27px;
      cursor: pointer;
    }
  }
}
