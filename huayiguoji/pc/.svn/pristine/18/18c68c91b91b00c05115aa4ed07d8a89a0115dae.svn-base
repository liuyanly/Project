<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta name="google" value="notranslate">
    <!-- 禁止Chrome 浏览器中自动提示翻译 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!-- 禁止百度转码 -->
    <title>医院详情</title>
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="element/element-ui.min.css">
    <link rel="stylesheet" href="swiper/swiper-3.4.2.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/public.css" />
    <link rel="stylesheet" href="css/index.css" />
    <link rel="stylesheet" href="css/online_ask.css" />
    <link rel="stylesheet" href="css/hospital_info.css" />
</head>

<body>
    <div id="page">
        <div class="container">
            <my-header active="3"></my-header>
        </div>
        <div class="main">
            <div class="header-top">
                <span>预约就诊>选择医生></span>
                <span class="hospital-name">{{title}}</span>
            </div>
            <section class="container">
                <div class="content-box">
                    <p class="top-title clearFix">
                        <span class="left">{{title}}</span>
                    </p>
                    <div class="can-status">
                        <span class="bold">医生</span> （已入驻
                        <span class="cc">{{countDoctor}}</span>人，当前可咨询
                        <span class="cc">99</span>人）
                    </div>
                    <ul class="department-num clearFix">
                        <li :class="{active:data.id == pid}" v-for="data in dataList" @click="changeDepartment(data.id)">{{data.title}}（
                            <span class="cc">{{data.count}}</span>人）</li>
                    </ul>
                    <p class="none-tip" v-if="tip == 1">该科室暂无医生</p>
                    <ul class="doctor-list clearFix">
                        <li v-for="data in doctorList" @click="linkDetail(data.id,data.translates.department_title,data.realname,data.translates.hospital_title)">
                            <div class="doctor-info clearFix">
                                <img class="left" :src="data.translates.avatar_img">
                                <div class="left doctor-content">
                                    <p>
                                        <span class="cc">{{data.realname}}</span>
                                    </p>
                                    <p class="name">{{data.translates.hospital_title}}</p>
                                </div>
                            </div>
                            <div class="content-word" v-if="data.specialty.length>38">
                                擅长：{{data.specialty.substring(0,38)+"..."}}
                            </div>
                            <div class="content-word" v-else="data.specialty.length<38">
                                擅长：{{data.specialty}}
                            </div>
                        </li>
                    </ul>
                    <div class="page" v-if="total > 1">
                        <el-pagination @size-change="handleSizeChange" @current-change="handleCurrentChange" layout="prev, pager, next" :current-page="currentPage" :page-size="per_page" :page-count="total">
                        </el-pagination>
                    </div>
                </div>

            </section>
        </div>

        <my-footer></my-footer>
        <login-box></login-box>
    </div>

    <script src="js/vue.js"></script>
    <script src="js/axios.min.js"></script>
    <script src="js/jquery-3.1.0.js"></script>
    <script src="js/Validform_v5.3.2.js"></script>
    <script src="element/element-ui.min.js"></script>
    <script src="swiper/swiper-3.4.2.min.js"></script>
    <script src="js/header.js"></script>
    <script src="js/user_login.js"></script>
    <script src="js/footer.js"></script>
    <script src="js/public.js"></script>
    <script>
        var content = new Vue({
            el: '#page',
            data() {
                return {
                    contentData: '擅长：胸闷、心功能不全、心绞痛、高血压、血脂异常擅长：胸闷、心功能不全、心绞痛、胸闷、心功能不全、心绞痛、高血压、血脂',
                    total: 0,
                    id: getparams('id'),
                    title: getparams('title'),
                    dataList: [],
                    doctorList: [],
                    pid: 0,
                    currentPage: 1,
                    per_page: 20,
                    tip: 0,
                    countDoctor: 0
                }
            },
            mounted: function() {
                this.id = getparams('id')
                this.title = getparams('title')
                this.getData()
                    // this.getDoctor()
            },
            methods: {
                /*maxSlice:function (v) {
                    if(this.contentData.length>40){
                        this.contentData =this.contentData.substring(0,40)+"...";
                    }
                }*/
                changeDepartment: function(id) {
                    this.pid = id;
                    this.getDoctor()
                },
                handleSizeChange: function(val) {
                    console.log(val);
                },
                handleCurrentChange: function(val) {
                    console.log(val);
                    this.currentPage = val;
                    this.getDoctor()
                },
                linkDetail: function(id, department, name, hospital) {
                    location.href = "doctor_info_hospital.html?id=" + id + '&title=' + name +
                        '&department=' + department + '&hospital=' + hospital
                },
                getData: function() {
                    var that = this;
                    axios.get(userApi + '/hospital/' + that.id)
                        .then(function(res) {
                            console.log('医院数据', res)
                            if (res.data.status == 200) {
                                that.dataList = res.data.data.translates.department_info;
                                for (var key in that.dataList) {
                                    // console.log(that.dataList[key].count);
                                    that.countDoctor += Number(that.dataList[key].count)
                                }
                                console.log(that.countDoctor)
                                console.log('科室分类:', that.dataList)
                                that.pid = that.dataList[0].id
                                that.getDoctor()
                            }
                        })
                        .catch(function(err) {

                        })
                },
                getDoctor: function() {
                    var that = this;
                    var params = {
                        per_page: this.per_page,
                        page: this.currentPage,
                    };
                    if (this.pid != 0) {
                        params.pid = this.pid
                    }
                    console.log('科室id', this.id)
                    axios.get(userApi + '/doctor?e_s[hospital_id]=' + this.id, {
                            params: params
                        })
                        .then(function(res) {
                            if (res.data.status == 200) {
                                that.tip = 0;
                                console.log('医生信息:', res);
                                that.doctorList = res.data.data.doctor;
                                that.total = res.data.data.paginate.total_page;
                                if (that.doctorList.length == 0) {
                                    that.tip = 1;
                                }
                            }
                        })
                        .catch(function(err) {

                        })
                },
            }
        })
    </script>
</body>

</html>