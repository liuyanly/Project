.search-box {
  width: 660px;
  height: 50px;
  margin: 0 auto;
  margin-bottom: 30px;
  background: #fff;
}
.search-box p {
  width: 635px;
  padding-left: 25px;
  background: #f4f4f4;
  border-radius: 8px;
}
.search-box p input {
  border: none;
  outline: none;
  background: transparent;
  height: 50px;
  line-height: 50px;
  width: 550px;
  font-size: 16px;
  color: #666;
  float: left;
  font-weight: 600;
}
.search-box p .search-pic {
  width: 83px;
  float: right;
  background: #4CC6D8;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
  height: 50px;
}
.search-box p .search-pic img {
  width: 33px;
  height: 33px;
  margin: 8px 25px;
}
.main {
  background: #f3f7fd;
}
.main .content-box {
  background: #fff;
  width: 960px;
  padding: 20px;
}
.main .content-box .top-title {
  border-bottom: 3px solid #57c6d7;
}
.main .content-box .top-title .left {
  font-size: 18px;
  color: #333;
  font-weight: 600;
  margin-bottom: 14px;
}
.main .content-box .top-title .right {
  font-size: 14px;
  color: #999;
  margin-bottom: 14px;
  cursor: pointer;
}
.main .content-box .doctor-search {
  padding: 22px 0;
}
.main .content-box .doctor-search .left {
  font-size: 14px;
  color: #666;
  padding-left: 28px;
  margin-bottom: 0;
}
.main .content-box .doctor-search .name {
  color: #999;
  padding-left: 18px;
}
.main .content-box .doctor-search .right {
  margin-bottom: 0;
  padding-right: 15px;
}
.main .content-box .doctor-search .right span {
  color: #4CC6D8;
}
.main .content-box .top-filter {
  padding-bottom: 19px;
  margin-top: 20px;
  border-bottom: 1px dotted #ccc;
}
.main .content-box .top-filter li {
  float: left;
  font-size: 14px;
  color: #999999;
  line-height: 18px;
  height: 18px;
  padding: 2px 3px;
  text-align: center;
  margin-left: 20px;
}
.main .content-box .top-filter li.active,
.main .content-box .top-filter li:hover {
  background: #57C6D7;
  color: #fff;
  cursor: pointer;
}
.main .content-box .area-list {
  padding: 28px;
}
.main .content-box .area-list > li {
  margin-bottom: 21px;
}
.main .content-box .area-list > li > p {
  font-size: 14px;
  color: #666;
  float: left;
}
.main .content-box .area-list > li .hospital-list {
  float: right;
  width: 807px;
}
.main .content-box .area-list > li .hospital-list li {
  color: #333333;
  margin-bottom: 18px;
  font-size: 14px;
  width: 269px;
  float: left;
}
.main .content-box .area-list > li .hospital-list li p {
  display: inline-block;
  box-sizing: border-box;
  height: 14px;
}
.main .content-box .area-list > li .hospital-list li.active > p,
.main .content-box .area-list > li .hospital-list li:hover > p {
  width: auto;
  color: #4CC6D8 ;
  border-bottom: 1px solid #4CC6D8;
}
.main .content-box .area-list > li .hospital-list li.active span,
.main .content-box .area-list > li .hospital-list li:hover span {
  color: #4CC6D8 ;
  cursor: pointer;
}
.main .content-box .area-list > li .hospital-list li span {
  color: #999;
  float: left;
}
.main .content-box .area-list > li .hospital-list li .name {
  color: #333;
  max-width: 180px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.main .content-box .department-filter {
  padding: 29px;
}
.main .content-box .department-filter li {
  width: 112px;
  float: left;
  font-size: 14px;
  color: #333;
  margin-bottom: 19px;
}
.main .content-box .department-filter li.active,
.main .content-box .department-filter li:hover {
  color: #57C6D7;
  text-decoration: underline;
  cursor: pointer;
}
.main .content-box .department-list {
  padding: 0;
  padding-top: 18px;
  margin-bottom: 21px;
}
.main .content-box .department-list > li > p {
  padding-top: 4px;
}
.main .content-box .department-list > li .hospital-list {
  width: 842px;
}
.main .content-box .department-list > li {
  margin-bottom: 0;
}
.main .content-box .department-list > li .hospital-list li {
  width: auto;
  margin-right: 37px;
  padding: 4px;
  margin-bottom: 14px;
  cursor: pointer;
}
.main .content-box .department-list > li .hospital-list li.current {
  padding: 4px;
  background: #4CC6D8;
  color: #fff;
}
.main .content-box .department-list > li .hospital-list li:hover {
  color: #4CC6D8;
  background: #fff;
  text-decoration: underline;
}
