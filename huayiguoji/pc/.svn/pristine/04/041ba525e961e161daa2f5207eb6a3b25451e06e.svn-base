<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta name="google" value="notranslate">
    <!-- 禁止Chrome 浏览器中自动提示翻译 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!-- 禁止百度转码 -->
    <title>注册</title>
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="element/element-ui.min.css">
    <link rel="stylesheet" href="swiper/swiper-3.4.2.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/public.css" />
    <link rel="stylesheet" href="css/index.css" />
    <link rel="stylesheet" href="css/now_pay.css" />
    <link rel="stylesheet" href="css/forget_paassword.css" />
</head>

<body>
    <div id="page">
        <header>
            <div class="container clearFix">
                <div class="logo-box left">
                    <img class="left" src="images/a1_logo.png">
                    <p class="left logo-name">华医国际</p>
                </div>
                <div class="login-area right">
                    <p class="login-p login-div">
                        <span class="register-btn">我已注册，</span>
                        <span class="login-btn" @click="login()">登录</span>
                    </p>
                </div>
            </div>
        </header>
        <div class="container relative" style="height:720px;margin-bottom: 40px;background: #fff;">
            <p class="header-title clearFix">注册</p>
            <div class="forget-content">
                <p class="title">注册</p>
                <form class="demoform">
                    <div class="form-box">
                        <p class="input-p">
                            <span class="name">手机号：</span>
                            <input type="number" datatype="n11-11" nullmsg="请输入手机号" errormsg="手机号错误" v-model="telNum1"
                                placeholder="请输入手机号"> </p>
                        <p class="input-p code-input">
                            <span class="name">验证码：</span>
                            <input type="number" datatype="n4-4" nullmsg="请输入验证码" errormsg="验证码错误" v-model="codeNum"
                                placeholder="请输入验证码">
                            <span class="code-btn" :class="{disable:btnType==1}" @click="getCode()">{{codeContent}}</span>
                        </p>
                        <p class="input-p">
                            <span class="name">设置新密码：</span>
                            <!-- <input type="password" datatype="n6-16| /\w{6,16}/i" name="newPassword" nullmsg="请设置新密码" -->
                            <input type="password" datatype="n6-16" name="newPassword" nullmsg="请设置新密码"
                                errormsg="密码格式错误" v-model="newPsw" placeholder="设置6-16位字母、数字密码"> </p>
                        <p class="input-p">
                            <span class="name">重复新密码：</span>
                            <!-- <input type="password" datatype="n6-16| /\w{6,16}/i" recheck="newPassword" nullmsg="请重复新密码" -->
                            <input type="password" datatype="n6-16" recheck="newPassword" nullmsg="请重复新密码"
                                v-model="repeatPsw" placeholder="设置6-16位字母、数字密码"> </p>
                        <p class="agreement">点击注册即可表示同意
                            <span @click="viewInfo()">《服务条款》</span>
                        </p>
                        <P class="btn-p">
                            <button type="button" class="sureBtn" @click="sureBtn">注册</button>
                        </P>
                    </div>
                </form>
            </div>
        </div>
        <div class="fade2" v-if="msgBoxStatus==1">
            <div class="msg-box">
                <div class="detail-box">
                    <p class="title">{{serviceData[0].title}}</p>
                    <p class="close-btn" @click="cancelBtn()">
                        <img src="images/f84_guanbi.png" />
                    </p>
                    <div class="content-word">
                        {{serviceData[0].content}}
                    </div>
                    <p class="btn-p">
                        <button type="button" class="sure-btn" @click="cancelBtn()">确认</button>
                    </p>
                </div>
            </div>
        </div>
        <div class="fade" v-show="loginType==1">
            <div class="msg-box">
                <div class="detail-box clearFix">
                    <img class="left" src="images/g1_bg1.png">
                    <form class="demoform1">
                        <div class="right relative content-box">
                            <img class="absolute" @click="cancel" src="images/f84_guanbi.png" />
                            <p class="login-title">登录</p>
                            <p class="input-p clearFix">
                                <img class="input-img left" src="images/g1_icon1.png">
                                <input class="tel left" v-model="telNum" type="number" datatype="n11-11" nullmsg="请填写手机号码"
                                    placeholder="手机号" errormsg="手机号码不正确">
                            </p>
                            <p class="input-p clearFix">
                                <img class="input-img left" src="images/g1_icon2.png">
                                <input class="tel left" v-model="psw" type="password" datatype="n6-16| /\w{6,16}/i" placeholder="请输入密码"
                                    nullmsg="请输入密码" errormsg="密码不正确">
                            </p>
                            <p class="forget-psw" onclick="">忘记密码？</p>
                            <p class="btn-login-p">
                                <button type="button" class="login-btn" @click="nowLogin">登录</button>
                            </p>
                            <p class="not-account clearFix" style="width: 140px">
                                <span>没有账号，去</span>
                                <span class="c1" onclick="window.location.href='register.html'">注册</span>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="js/vue.js"></script>
    <script src="js/axios.min.js"></script>
    <script src="js/jquery-3.1.0.js"></script>
    <script src="js/Validform_v5.3.2.js"></script>
    <script src="element/element-ui.min.js"></script>
    <script src="js/header.js"></script>
    <script src="swiper/swiper-3.4.2.min.js"></script>
    <script src="js/public.js"></script>
    <script>
        var content = new Vue({
            el: "#page",
            data: {
                codeContent: "获取验证码",
                btnType: 0,
                time: 60,
                newPsw: '',
                repeatPsw: '',
                telNum1: '',
                codeNum: '',
                loginType: 0,
                telNum: '',
                psw: '',
                msgBoxStatus: 0,
                serviceData: []
            },
            mounted: function () {
                $(".demoform").Validform({
                    tiptype: 3
                });
                $(".demoform1").Validform({
                    tiptype: 3
                });
                this.getServiceData();
            },
            methods: {
                cancelBtn: function () {
                    this.msgBoxStatus = 0;
                },
                viewInfo: function () {
                    this.msgBoxStatus = 1;
                },
                getServiceData: function () {
                    var that = this;
                    axios.get(userApi + '/agreement?e_s[name]=user')
                        .then(function (res) {
                            console.log(res.data);
                            that.serviceData = res.data.data;
                        })
                        .catch(function (err) {
                            console.log(err);
                        })
                },
                timing: function () {
                    var that = this;
                    if (this.time == 0) {
                        this.btnType = 0;
                        this.codeContent = "获取验证码";
                    } else {
                        this.btnType = 1;
                        this.codeContent = this.time + '重新获取';
                        this.time--;
                        setTimeout(function () {
                            that.timing();
                        }, 1000)
                    }
                },
                getCode: function () {
                    var that = this;
                    if (this.telNum1 != '' && this.telNum1.length == 11) {
                        if (this.time == 60) {
                            that.timing();
                            axios.post(userApi + '/auth/code/register', {
                                    username: that.telNum1
                                })
                                .then(function (res) {
                                    if (res.data.status != 200) {
                                        that.$alert(res.data.message, '提示', {
                                            confirmButtonText: '确定',
                                            type: 'warning',
                                        }).then(function () {

                                        })
                                    }
                                })
                                .catch(function (err) {
                                    that.$alert(err, '提示', {
                                        confirmButtonText: '确定',
                                        type: 'error',
                                    }).then(function () {

                                    })
                                })
                        }
                    }
                },
                login: function () {
                    this.loginType = 1;
                },
                cancel: function () {
                    this.loginType = 0;
                },
                nowLogin: function () {
                    localStorage.setItem('userId', '');
                    localStorage.setItem('userName', '');
                    localStorage.setItem('userInfo', '');
                    var that = this;
                    if (this.telNum == '') {
                        this.$alert('请输入手机号码', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (this.telNum.length != 11) {
                        this.$alert('手机号码不正确', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (this.psw == "") {
                        this.$alert('请输入密码', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    var regExp = /^[a-zA-Z\d]{6,16}$/;
                    if (!regExp.test(this.psw)) {
                        this.$alert('密码不正确', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    axios.post(userApi + '/auth/login', {
                            username: that.telNum,
                            password: that.psw,
                            login_type: 'phone'
                        })
                        .then(function (res) {
                            if (res.data.status == 200) {
                                that.$message({
                                    message: res.data.message,
                                    type: 'success'
                                });
                                localStorage.setItem('userId', 1);
                                localStorage.setItem('userName', res.data.data.nickname);
                                localStorage.setItem('userInfo', JSON.stringify(res.data.data));
                                location.href = "index.html";
                            } else {
                                that.$alert(res.data.message, '提示', {
                                    confirmButtonText: '确定',
                                    type: 'error',
                                }).then(function () {

                                })
                            }
                        })
                        .catch(function (err) {
                            that.$alert(err.message, '提示', {
                                confirmButtonText: '确定',
                                type: 'error',
                            }).then(function () {

                            })
                        })

                },
                sureBtn: function () {
                    var that = this;
                    if (this.telNum1 == '') {
                        this.$alert('请输入手机号', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (this.telNum1.length != 11) {
                        this.$alert('手机号格式不正确', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (this.codeNum == '') {
                        this.$alert('请输入验证码', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (this.codeNum.length != 4) {
                        this.$alert('验证码不正确', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    var regExp = /^[a-zA-Z\d]{6,16}$/;
                    if (this.newPsw == '') {
                        this.$alert('请输入新密码', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (!regExp.test(this.newPsw)) {
                        this.$alert('新密码格式不正确', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (this.repeatPsw == '') {
                        this.$alert('请输入重复密码', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    if (!regExp.test(this.repeatPsw)) {
                        this.$alert('重复密码格式不正确', '提示', {
                            confirmButtonText: '确定',
                            type: 'warning',
                        }).then(function () {

                        })
                        return false;
                    }
                    localStorage.setItem('userId', '');
                    localStorage.setItem('userName', '');
                    localStorage.setItem('userInfo', '');
                    axios.post(userApi + '/auth/register', {
                            username: that.telNum1,
                            password: that.repeatPsw,
                            code: that.codeNum
                        })
                        .then(function (res) {
                            if (res.data.status == 200) {
                                that.$alert('注册成功, 立即登录！', '提示', {
                                    confirmButtonText: '确定',
                                    type: 'success'
                                }).then(function () {
                                    that.loginType = 1;
                                })
                            } else {
                                that.$alert(res.data.message, '提示', {
                                    confirmButtonText: '确定',
                                    type: 'error',
                                }).then(function () {

                                })
                            }
                        })
                        .catch(function (err) {
                            that.$alert(err.message, '提示', {
                                confirmButtonText: '确定',
                                type: 'error',
                            }).then(function () {

                            })
                        })

                }
            }
        })
    </script>
</body>

</html>