@import "../../less/variable";

.sum-money{
  padding: 17px 14px;
  border-bottom: 1px solid #eff1fa;
  .money{
    .color999(18px,#ee774d);
    font-weight: 600;
    line-height: 20px;
  }
  .name{
    .color999(14px,#666);
    line-height: 15px;
    margin-top: 3px;
    margin-left: 5px;
  }
}
.tip{
  padding: 15px 15px;
  line-height: 15px;
  .color999(14px,#999);

}
.agree-p{
  padding:0 14px;
  input[type = "checkbox"] {
    position: absolute;
    left: 0;
    top:3px;
    width: 18px;
    height: 18px;
    opacity: 0;
  }
  label{
    .color999(14px,#666);
    span{
      .color999(14px,#2748AB);
      cursor: pointer;
    }
  }
}
.btn-p{
  .marginLeft{
    margin-bottom: 64px;
  }
}
.fade2{
  position: fixed;
  top: 0;
  right: 0;
  text-align: center;
  vertical-align: middle;
  display: flex;
  width: 100%;
  height: 100vh;
  z-index:1001;
  .msg-box {
    width: 100%;
    height: 100vh;
    overflow: auto;
    background: rgba(0, 0, 0, 0.3);
    z-index:1002;
    position: absolute;
    display: -webkit-box;
    display: flex;
    display: -webkit-flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    align-items: center;
    .detail-box {
      width: 804px;
      height: 542px;
      background: #fff;
      border-radius: 10px;
      box-sizing: border-box;
      padding:22px 0;
      position: relative;
      .title{
        .color999(18px,#000);
        font-family: PingFangSC-Medium;
        text-align: center;
        margin: 32px 0 50px 0;
        line-height: 19px;
      }
      .close-btn{
        .color999(36px,#ccc);
        position: absolute;
        top:2px;
        cursor: pointer;
        right: 24px;
      }
      .content-word{
        font-family: "PingFang SC";
        //box-sizing: content-box;
        width: 556px;
        padding-right: 88px;
        height: 328px;
        margin-left: 127px;
        overflow: auto;
        font-size: 16px;
      }
      .btn-p{
        margin-top: 30px;
        text-align: center;
        button{
          width:136px;
          height:40px;
          background:rgba(76,198,216,1);
          border-radius: 3px ;
          cursor: pointer;
          .color999(14px,#fff);
          border: none;
        }
      }
    }
  }
}

.content-word::-webkit-scrollbar-track
{
  width: 6px;
  border-radius: 3px;
  background-color: #F1F1F1;
}

.content-word::-webkit-scrollbar
{
  width: 6px;
  background-color: #F1F1F1;
}

.content-word::-webkit-scrollbar-thumb
{
  border-radius: 3px;
  background-color: #2748AB;
}
