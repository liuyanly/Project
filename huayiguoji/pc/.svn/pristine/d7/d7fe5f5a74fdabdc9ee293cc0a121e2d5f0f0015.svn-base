<script>
    var content = new Vue({
        el: '#page',
        data: {
            contentWord: "某某与公益的橄榄枝，就像一只和平鸽飞翔于世界民族之林，在不同肤色的人群中飞越五某某与公益的橄榄枝，就像一只和平鸽飞翔于世界在不同肤色的人群中飞越五某某与公益的橄榄枝",
            total: 10,
            items: [],
            isShowPage: true
        },
        created: function () {

        },
        mounted() {
            getToken(this)
            //用户信息
            // axios.get(doctorApi + '/user/patient')
            //     .then(function (res) {
            //         if (res.status == 200) {
            //             console.log(res)
            //         }
            //     })
        },
        methods: {
            getData: function (page) {
                var _this = this;
                axios.get(doctorApi + '/user/patient?per_page=8&page=' + page)
                    .then(function (res) {
                        if (res.status == 200) {
                            // _this.items = res.data.data.notifications;
                            // _this.total = res.data.data.paginate.total_page * 10;
                            _this.isShowPage = res.data.data.patient.length > 0 ? true : false
                        }
                    })
            },
            link: function (type) {
                if (type == 1) {
                    location.href = "push_msg.html";
                } else if (type == 2) {
                    location.href = "dialogue_msg.html";
                } else {
                    location.href = "group_msg.html";
                }
            },
            delMsg: function () {
                var that = this;
                this.$confirm('此操作将永久删除该消息, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(function () {
                    that.$message({
                        type: 'success',
                        message: '删除成功!'
                    });
                }).catch(function () {
                    that.$message({
                        type: 'info',
                        message: '已取消删除'
                    });
                });
            },
            sendMsg: function () {
                location.href = "launch_group_chat.html"
            }
        }
    })
