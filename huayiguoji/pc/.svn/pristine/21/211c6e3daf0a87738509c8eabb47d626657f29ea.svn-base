<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta name="google" value="notranslate">
    <!-- 禁止Chrome 浏览器中自动提示翻译 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!-- 禁止百度转码 -->
    <title>我的患者</title>
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="element/element-ui.min.css">
    <link rel="stylesheet" href="swiper/swiper-3.4.2.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/public.css" />
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="css/index.css" />
    <link rel="stylesheet" href="css/my_patient.css" />
    <script src="./node_modules/babel-polyfill/dist/polyfill.min.js"></script>
</head>

<body>
    <div id="page">
        <div class="container">
            <my-header active="6"></my-header>
        </div>
        <div class="main" style="background: #F3F7FD;padding-top: 15px;padding-bottom: 40px;">
            <section class="container" style="background: #fff;min-height: 720px">
                <div class="content-list">
                    <p class="header-title clearFix">我的患者</p>
                    <ul class="patient-list">
                        <li class="clearFix" v-for="data in dataList">
                            <img class="left" :src="data.translates.avatar_img">
                            <div class="left">
                                <p class="line1">
                                    <span class="name">{{data.realname}}</span>
                                    <span class="disease">病症：{{data.illness}}</span>
                                </p>
                                <p class="line2 clearFix">
                                    <span class="sex">性别：{{data.translates.sex}}</span>
                                    <span class="age">年龄：{{data.translates.age}}</span>
                                </p>
                            </div>
                            <div class="right">
                                <span class="send-msg" @click="sendMsg(data.id,data.realname,data.translates.avatar_img)">发消息</span>
                                <span class="tip" @click="tip(data.id,data.realname)">提醒</span>
                                <span class="view-detail" @click="viewDetail(data.id,data.realname)">查看详情</span>
                            </div>
                        </li>
                    </ul>
                    <div class="page" v-if="total>1" style="margin-top: 40px;margin-bottom: 10px;">
                        <el-pagination @size-change="handleSizeChange" @current-change="handleCurrentChange" layout="prev, pager, next" :current-page="currentPage" :page-size="per_page" :page-count="total">
                        </el-pagination>
                    </div>
                </div>
            </section>
        </div>
        <my-footer></my-footer>
        <login-box></login-box>
    </div>

    <script src="js/vue.js"></script>
    <script src="js/axios.min.js"></script>
    <script src="js/jquery-3.1.0.js"></script>
    <script src="js/Validform_v5.3.2.js"></script>
    <script src="element/element-ui.min.js"></script>
    <script src="swiper/swiper-3.4.2.min.js"></script>
    <script src="js/header.js"></script>
    <script src="js/doctor_login.js"></script>
    <script src="js/slider.js"></script>
    <script src="js/footer.js"></script>
    <script src="js/public.js"></script>
    <script>
        var content = new Vue({
            el: '#page',
            data: {
                total: 0,
                per_page: 8,
                currentPage: 1,
                dataList: [],
            },
            created: function() {

            },
            mounted: function() {
                getToken(this)
                this.getDataList()
            },
            methods: {
                sendMsg: function(id, name, avatar_img) {
                    window.location = "dialogue_msg.html?id=" + id + '&name=' + encodeURI(encodeURI(name) + '&avatar_img=' + encodeURI(encodeURI(avatar_img)));
                },
                tip: function(id) {
                    location.href = "publish_tip.html?id=" + id;
                },
                viewDetail: function(id) {
                    localStorage.setItem('pId', id) //存储患者ID

                    location.href = "health_control.html?id=" + id;
                },
                handleSizeChange: function(val) {

                },
                handleCurrentChange: function(val) {
                    this.currentPage = val;
                    this.getDataList()
                },
                getDataList: function() {
                    var that = this
                    axios.get(doctorApi + '/user/patient?per_page=' + that.per_page + '&page=' + that.currentPage)
                        .then(function(res) {
                            console.log(res.data)
                            if (res.data.status == 200) {
                                that.dataList = res.data.data.patient;
                                that.total = res.data.data.paginate;

                            }
                        })
                        .catch(function(err) {
                            linkLogin(that)
                        })
                }
            }
        })
    </script>
</body>

</html>