@import "variable";

.filter-box{
  margin-top: 28px;
  padding-left: 14px;
  padding-bottom: 27px;
  .borderBottom();
}
.pos{
  position: relative;
  width: 114px;
  height: 30px;
  margin-right: 9px;
  &:last-child{
    margin-right: 0;
  }
  .xiaLa{
    position: absolute;
    right:6px;
    top:11px;
  }
}
.date-select {
  select {
    width: 114px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #eff1fa;
    border-radius: 3px;
    padding-left: 10px;
    //opacity: 0;
    appearance: none;
    -moz-appearance: none;
    -webkit-appearance: none;
    .color999(14px, #999);
    outline-width: 1px;
    background: #FAFBFF;
    option {
      .color999(14px, #999);
      padding: 20px;
      width: 114px;
      text-align: center;
      height: 34px;
      display: inline-block;
      line-height: 34px;
      height: 34px;
      border-bottom: none;
    }
    .placeholder {
      display: none;
      .color999(14px, #999);
    }
  }
}
.name-word{
  .color999(14px,#999);
  line-height: 30px;
  margin-right: 6px;
}
.data-content{
  .data-list{
    padding: 42px 14px 20px 14px;
    .input-name{
      width: 127px;
      height: 30px;
      .color999(14px,#999);
      text-align: right;
      /*display: table-cell;
      vertical-align: middle;
      line-height: 15px;*/
      display:-webkit-box;
      display:-webkit-flex;
      display:-ms-flexbox;
      display:flex;
      align-items: center;
      justify-items: flex-end;
      justify-content: flex-end;
      align-content: center;
      -webkit-align-content: center;
      -webkit-justify-content: flex-end;
      -webkit-justify-items: flex-end;
      -webkit-align-items: center;
      -ms-flex-align-content: center;
      -ms-flex-justify-content: flex-end;
      -ms-flex-justify-items: flex-end;
      -ms-flex-align-items: center;
      span{
        display: inline-block;
        line-height: 15px;
      }
    }

    .input-p{
      margin-bottom: 20px;
      margin-left: 15px;
      margin-right: 47px;
      input{
        width: 214px;
        height: 28px;
        line-height: 28px;
        border: 1px solid #EFF1FA ;
        background: #FAFBFF;
        padding: 0 10px;
        border-radius: 3px;
      }
    }
  }
}
.btn-box{
  margin-left:160px;
  .save-btn{
    width: 136px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    background: #4CC6D8;
    border: none;
    color: #fff;
    border-radius: 3px;
  }
}
.el-input__inner::-webkit-input-placeholder { /* WebKit browsers */
  color:    #999;
}
.el-input__inner:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color:    #999;
}
.el-input__inner::-moz-placeholder { /* Mozilla Firefox 19+ */
  color:    #999;
}
.el-input__inner:-ms-input-placeholder { /* Internet Explorer 10+ */
  color:    #999;
}
.el-input__prefix{
  display: none;
}
.el-date-editor.el-input, .el-date-editor.el-input__inner {
  width: 114px;
}
.el-input--prefix .el-input__inner {
  padding-left: 10px;
}
.el-input__inner{
  height: 30px;
  border-radius: 3px;
  border: 1px solid #eff1fa;
  background: #FAFBFF;
  //line-height: 28px;
}
.el-input--suffix .el-input__inner {
  padding-right:0
}
.el-input__suffix {
  display: none;
}