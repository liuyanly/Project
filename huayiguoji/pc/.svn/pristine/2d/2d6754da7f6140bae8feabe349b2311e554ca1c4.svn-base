    <script>
        var content = new Vue({
            el: '#page',
            data() {
                return {
                    abnormalData: [],
                    aId: getparams('aId'),
                    id: getparams('id'),
                    name: getparams('name'),
                    detailData: '',
                }
            },
            mounted: function() {
                getToken(this)
                this.getData()
                this.getDetail()
            },
            methods: {
                //获取检验数据类型
                getData: function() {
                    var that = this
                    axios.get(userApi + '/archive/' + that.id)
                        .then(function(res) {
                            if (res.data.status == 200) {
                                //重组检查数据
                                for (var i = 0; i < res.data.data.detection.length; i++) {
                                    var tem = {
                                        name: res.data.data.detection[i].category,
                                        count: 0,
                                    }
                                    for (var j = 0; j < res.data.data.detection[i].data.length; j++) {
                                        tem.count += res.data.data.detection[i].data[j].abnormal_count
                                    }
                                    that.abnormalData.push(tem)
                                }
                            }
                        })
                        .catch(function(err) {
                            //linkLogin(that)
                        })
                },
                //获取检验数据详情，表格数据
                getDetail: function() {
                    var that = this
                    axios.get(userApi + '/archive/showdetection?archive_id=' + that.id + '&category=' + that.name)
                        .then(function(res) {
                            if (res.data.status == 200) {
                                that.detailData = res.data.data.data
                                console.log(that.detailData)
                            }
                        })
                        .catch(function(err) {

                        })
                },
                //切换检验数据类型
                changeType: function(id, name) {
                    this.name = name;
                    this.getDetail()
                },
                //趋势图
                linkChart: function(id, name) {
                    location.href = "trend_chart.html?id=" + id + '&name=' + name;
                },
            }
        })
    </script>
