.cc {
    font-size: 14px;
    color: #4CC6D8;
}

.header-title {
    line-height: 50px;
    border-bottom: 1px solid #eff1fa;
    padding: 0 20px;
    font-size: 14px;
    color: #333;
}

.main .container .right-box {
    height: auto;
}

.header-top {
    padding: 15px 15px;
    border-bottom: 1px solid #eff1fa;
}

.header-top img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin: 5px 0;
    margin-right: 14px;
}

.header-top .header-name {
    font-size: 14px;
    color: #000;
    margin-top: 10px;
}

.header-top .header-name span {
    font-size: 14px;
    color: #999;
}

.header-top .hospital-name {
    font-size: 12px;
    color: #4cc6d8;
    margin-top: 7px;
}

.header-top .info-div {
    width: 561px;
}

.header-top .info-div .right-title {
    width: 80px;
    color: #999;
    margin-top: 5px;
}

.header-top .info-div .right-content {
    width: 480px;
    color: #333;
    line-height: 24px;
}

.chat-content {
    padding: 0 15px;
    height: 453px;
    overflow: auto;
}

.chat-content .time {
    margin-top: 14px;
    text-align: center;
    font-size: 12px;
    color: #999;
}

.chat-content .line,
.chat-content .line2 {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    align-items: center;
    align-content: center;
    -webkit-align-content: center;
    -webkit-align-items: center;
    -ms-flex-align-content: center;
    -ms-flex-align-items: center;
    margin-bottom: 20px;
}

.chat-content .line .word-p,
.chat-content .line2 .word-p {
    max-width: 546px;
    line-height: 18px;
    border-radius: 6px;
    position: relative;
}

.chat-content .line2 .word-p:after,
.chat-content .line .word-p:before {
    border: solid transparent;
    content: ' ';
    height: 0;
    top: 100%;
    position: absolute;
    width: 0;
}

.chat-content .line {
    justify-items: flex-start;
    justify-content: flex-start;
    -webkit-justify-content: flex-start;
    -webkit-justify-items: flex-start;
    -ms-flex-justify-content: flex-start;
    -ms-flex-justify-items: flex-start;
}

.chat-content .line .word-p {
    background: #F3F7FD;
    padding: 17px 19px 18px 22px;
    display: flex;
    align-content: center;
    align-items: center;
}

.chat-content .line .word-p:before {
    border-width: 10px;
    border-right-color: #F3F7FD;
    position: absolute;
    left: -20px;
    top: 50%;
    margin-top: -10px;
}

.chat-content .line2 {
    justify-items: flex-end;
    justify-content: flex-end;
    -webkit-justify-content: flex-end;
    -webkit-justify-items: flex-end;
    -ms-flex-justify-content: flex-end;
    -ms-flex-justify-items: flex-end;
}

.chat-content .line2 .word-p {
    padding: 17px 22px 19px 20px;
    /*padding: 17px 22px 0 20px;*/
    background: #4CC6D8;
    color: #fff;
}

.chat-content .line2 .word-p:after {
    border-width: 10px;
    border-left-color: #4CC6D8;
    position: absolute;
    top: 50%;
    right: -18px;
    margin-top: -10px;
}

.chat-content .line > img,
.chat-content .line2 > img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.chat-content .line > img {
    margin-right: 12px;
}

.chat-content .line2 > img {
    margin-left: 12px;
}

.footer-bottom {
    border-top: 1px solid #EFF1FA;
    padding: 10px 15px;
    line-height: 30px;
}

.footer-bottom img {
    width: 23px;
    height: 19px;
    margin-left: 2px;
    margin-right: 12px;
    margin-top: 5px;
    cursor: pointer;
}

.footer-bottom input {
    border: 1px solid #EFF1FA;
    background: #f3f7fd;
    border-radius: 3px;
    width: 688px;
    line-height: 28px;
    padding: 0 10px;
    margin-right: 16px;
    color: #666;
}

.footer-bottom button {
    cursor: pointer;
    background: #4CC6D8;
    width: 80px;
    height: 30px;
    border: none;
    line-height: 30px;
    color: #fff;
    border-radius: 3px;
    text-align: center;
    box-sizing: border-box;
}

.btn-footer {
    text-align: right;
}

.btn-footer .go-consult {
    border: 1px solid #4CC6D8;
    background: #fff;
    color: #4CC6D8;
    margin-right: 12px;
}

.consult-box {
    width: 100%;
    height: 640px;
    background: #ddd;
}

.consult-box .another-person {
    top: 30px;
    right: 17px;
    width: 188px;
    height: 253px;
    border: 1px solid #4CC6D8;
    box-sizing: border-box;
    background: #fff;
}

.consult-box .hang-up {
    bottom: 51px;
    width: 62px;
    left: 50%;
    margin-left: -62px;
}

.consult-box .hang-up .time {
    font-size: 14px;
    color: #fff;
    margin-bottom: 9.5px;
    text-align: center;
}

.consult-box .hang-up img {
    width: 61px;
    height: 62px;
    margin: 0 auto;
    margin-bottom: 12px;
    cursor: pointer;
}

.consult-box .hang-up .word {
    font-size: 14px;
    color: #fff;
    text-align: center;
}
