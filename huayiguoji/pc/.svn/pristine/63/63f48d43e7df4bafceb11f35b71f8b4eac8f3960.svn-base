<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta name="google" value="notranslate">
    <!-- 禁止Chrome 浏览器中自动提示翻译 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!-- 禁止百度转码 -->
    <title>我的任务</title>
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="element/element-ui.min.css">
    <link rel="stylesheet" href="swiper/swiper-3.4.2.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/public.css" />
    <link rel="stylesheet" href="css/index.css" />
    <link rel="stylesheet" href="css/my_task.css" />
    <script src="./node_modules/babel-polyfill/dist/polyfill.min.js"></script>
</head>

<body>
    <div id="page">
        <div class="container">
            <my-header active="2"></my-header>
        </div>
        <div class="main-box" style="padding-top: 15px">
            <section class="container clearFix" style="margin-bottom: 47px;background: #fff">
                <my-left-nav active="2"></my-left-nav>
                <div class="right-box left" style="width: 884px;">
                    <div class="content-list">
                        <p class="header-title clearFix">待处理</p>
                        <ul class="server-list">
                            <li class="clearFix" v-for="(item,index) in items" :key="index">
                                <img :src="item.doctor.translates.avatar_img" class="left">
                                <div class="left user-info">
                                    <p class="line1">
                                        <span class="user-name">{{item.doctor.realname}}</span>
                                        <span class="disease">病症：{{item.title}}</span>
                                        <span class="tag">{{item.translates.type_desc}}</span>
                                    </p>
                                    <p class="line2">
                                        <span class="sex">性别：{{item.doctor.translates.sex}}</span>
                                        <span class="age">年龄：{{item.doctor.translates.age}}</span>
                                    </p>
                                </div>
                                <p class="btn-p right" @click="viewDetail(item.service_id,item)">查看详情</p>
                            </li>
                        </ul>
                        <p style="text-align: center" v-if="items.length>0?0:1">暂无数据</p>
                        <div class="page" style="margin-top: 40px;margin-bottom: 10px;" v-if="items.length>0?1:0">
                            <el-pagination layout="prev, pager, next" :total=total @current-change="getData">
                            </el-pagination>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <my-footer></my-footer>
        <login-box></login-box>
    </div>

    <script src="js/vue.js"></script>
    <script src="js/axios.min.js"></script>
    <script src="js/jquery-3.1.0.js"></script>
    <script src="js/Validform_v5.3.2.js"></script>
    <script src="element/element-ui.min.js"></script>
    <script src="swiper/swiper-3.4.2.min.js"></script>
    <script src="js/header.js"></script>
    <script src="js/task_leftNav.js"></script>
    <script src="js/doctor_login.js"></script>
    <script src="js/slider.js"></script>
    <script src="js/footer.js"></script>
    <script src="js/public.js"></script>
    <script>
        var content = new Vue({
            el: '#page',
            data: {
                total: 10,
                items: []
            },
            created: function () {

            },
            mounted: function () {
                getToken(this)
                this.getData('1')

            },
            methods: {
                getData: function (page) {
                    var _this = this;
                    axios.get(doctorApi + '/service?per_page=8&page=' + page + '&status=' + 0)
                        .then(function (res) {
                            if (res.status == 200) {
                                console.log(res);
                                var data = res.data.data;
                                _this.items = data.data;
                                // console.log(_this.items)
                                _this.total = data.paginate.total_page * 10
                            } else
                                this.$alert('获取信息失败！', '提示', {
                                    confirmButtonText: '确定',
                                    type: "error"
                                })
                        })
                },
                viewDetail: function (service_id, item) {
                    localStorage.userItem = JSON.stringify(item);
                    location.href = "non_server_info.html?service_id=" + service_id;

                }
            }
        })
    </script>
</body>

</html>