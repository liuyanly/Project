<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta name="google" value="notranslate"><!-- 禁止Chrome 浏览器中自动提示翻译 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta http-equiv="Cache-Control" content="no-siteapp"/><!-- 禁止百度转码 -->
    <title>修改密码</title>
    <link rel="stylesheet" href="css/normalize.css"/>
    <link rel="stylesheet" href="element/element-ui.min.css">
    <link rel="stylesheet" href="swiper/swiper-3.4.2.min.css"/>
    <link rel="stylesheet" href="css/imgUp.css"/>
    <link rel="stylesheet" href="css/style.css"/>
    <link rel="stylesheet" href="css/public.css"/>
    <link rel="stylesheet" href="css/index.css"/>
    <link rel="stylesheet" href="css/recharge.css"/>
    <link rel="stylesheet" href="css/service_feedback.css"/>
    <link rel="stylesheet" href="css/edit_password.css"/>
</head>
<body>
<div id="page">
    <div class="container">
        <my-header active="7"></my-header>
    </div>
    <div class="main">
        <section class="container clearFix">
            <my-left-nav active="4"></my-left-nav>
            <div class="right right-box forget-content" style="min-height: 720px;height: auto;width: 878px">
                <p class="header-title clearFix">忘记密码</p>
                <div class="forget-content">
                    <form class="demoform">
                        <div class="form-box">
                            <p class="input-p"><span class="name">手机号：</span><input type="number" datatype="n11-11" nullmsg="请输入手机号" errormsg="手机号错误" v-model="telNum1" placeholder="请输入手机号"> </p>
                            <p class="input-p code-input"><span class="name">验证码：</span><input type="number" datatype="n4-4" nullmsg="请输入验证码" errormsg="验证码错误" v-model="codeNum" placeholder="请输入验证码"><span class="code-btn" :class="{disable:btnType==1}" @click="getCode()">{{codeContent}}</span></p>
                            <p class="input-p"><span class="name">设置新密码：</span><input type="password" datatype="n6-16| /\w{6,16}/i" name="newPassword" nullmsg="请设置新密码" errormsg="密码格式错误" v-model="newPsw" placeholder="设置6-16位字母、数字密码"> </p>
                            <p class="input-p"><span class="name">重复新密码：</span><input type="password" datatype="n6-16| /\w{6,16}/i" recheck="newPassword" nullmsg="请重复新密码" v-model="repeatPsw" placeholder="设置6-16位字母、数字密码"> </p>
                            <P class="btn-p">
                                <button type="button" class="sureBtn" @click="sureBtn">确认</button>
                            </P>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
    <my-footer></my-footer>
    <div class="fade" v-show="loginType==1">
        <div class="msg-box">
            <div class="detail-box clearFix">
                <img class="left" src="images/g1_bg1.png">
                <form class="demoform1">
                    <div class="right relative content-box">
                        <img class="absolute" @click="cancel" src="images/f84_guanbi.png"/>
                        <p class="login-title">登录</p>
                        <p class="input-p clearFix"><img class="input-img left" src="images/g1_icon1.png"><input class="tel left" v-model="telNum" type="number" datatype="m" nullmsg="请填写手机号码" placeholder="手机号" errormsg="手机号码不正确"></p>
                        <p class="input-p clearFix"><img class="input-img left" src="images/g1_icon2.png"><input class="tel left" v-model="psw" type="password" datatype="n6-16| /\w{6,16}/i" placeholder="请输入密码" nullmsg="请输入密码" errormsg="密码不正确"></p>
                        <p class="forget-psw" onclick="">忘记密码？</p>
                        <p class="btn-login-p"><button type="button" class="login-btn" @click="nowLogin">登录</button> </p>
                        <p class="not-account clearFix"><span>没有账号，去</span><span class="c1" onclick="window.location.href='register.html'">注册</span> </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="js/vue.js"></script>
<script src="js/axios.min.js"></script>
<script src="js/jquery-3.1.0.js"></script>
<script src="js/uploadImg.js"></script>
<script src="js/Validform_v5.3.2.js"></script>
<script src="element/element-ui.min.js"></script>
<script src="js/header.js"></script>
<script src="js/login.js"></script>
<script src="js/footer.js"></script>
<script src="js/leftNav.js"></script>
<script src="js/public.js"></script>
<script>
    var $this=''
    var content=new Vue({
        el:'#page',
        data:{
            codeContent:"获取验证码",
            btnType:0,
            time:60,
            newPsw:'',
            repeatPsw:'',
            telNum1:'',
            codeNum:'',
            loginType:0,
            telNum:'',
            psw:'',
        },
        mounted:function () {
            $(".demoform").Validform({
                tiptype:3
            });
            $(".demoform1").Validform({
                tiptype:3
            });
        },
        methods:{
            timing:function () {
                var that=this;
                if(this.time==0){
                    this.btnType=0;
                    this.codeContent="获取验证码";
                }else{
                    this.btnType=1;
                    this.codeContent=this.time+'重新获取';
                    this.time--;
                    setTimeout(function () {
                        that.timing();
                    },1000)
                }
            },
            login:function () {
                this.loginType=1;
            },
            cancel:function () {
                this.loginType=0;
            },
            nowLogin:function () {
                if(this.telNum==''){
                    this.$alert('请输入手机号码', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(this.telNum.length!=11||!(/^1[3|4|5|8][0-9]\d{4,8}$/.test(this.telNum))){
                    this.$alert('手机号码不正确', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(this.psw==""){
                    this.$alert('请输入密码', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                var regExp=/^[a-zA-Z\d]{6,16}$/;
                if(!regExp.test(this.psw)){
                    this.$alert('密码不正确', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                localStorage.setItem('assistantId','');
                localStorage.setItem('assistantName','');
                localStorage.setItem('assistantInfo','');
                var that=this;
                axios.post(assistantApi+'/auth/login',{
                    username:that.telNum,
                    password:that.psw,
                    login_type:'phone'
                })
                    .then(function (res) {
                        if(res.data.status!=200){
                            that.$alert(res.data.message, '提示', {
                                confirmButtonText: '确定',
                                type:'error',
                            }).then(function () {

                            })
                        }else{
                            that.$message({
                                message: res.data.message,
                                type: 'success'
                            });
                            localStorage.setItem('assistantId',1);
                            localStorage.setItem('assistantName',res.data.data.realname);
                            localStorage.setItem('assistantInfo',JSON.stringify(res.data.data));
                            location.href="index.html";
                        }
                    })
                    .catch(function (err) {
                        that.$alert(err.message, '提示', {
                            confirmButtonText: '确定',
                            type:'error',
                        }).then(function () {

                        })
                    })

            },
            getCode:function () {
                var that=this;
                if(this.telNum1!=''&&this.telNum1.length==11){
                    that.timing();
                    axios.post(assistantApi+'/auth/code/reset-password',{
                        username:that.telNum1
                    })
                        .then(function (res) {
                            if(res.data.status!=200){
                                that.$alert(res.data.message, '提示', {
                                    confirmButtonText: '确定',
                                    type:'warning',
                                }).then(function () {

                                })
                            }
                        })
                        .catch(function (err) {
                            that.$alert(err, '提示', {
                                confirmButtonText: '确定',
                                type:'error',
                            }).then(function () {

                            })
                        })
                }
            },
            sureBtn:function () {
                var that=this;
                if(this.telNum1==''){
                    this.$alert('请输入手机号', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(this.telNum1.length!=11){
                    this.$alert('手机号格式不正确', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(this.codeNum==''){
                    this.$alert('请输入验证码', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                var regExp=/^[a-zA-Z\d]{6,16}$/;
                if(this.newPsw==''){
                    this.$alert('请输入新密码', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(!regExp.test(this.newPsw)){
                    this.$alert('新密码格式不正确', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(this.repeatPsw==''){
                    this.$alert('请输入重复密码', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                if(!regExp.test(this.repeatPsw)){
                    this.$alert('重复密码格式不正确', '提示', {
                        confirmButtonText: '确定',
                    })
                    return false;
                }
                localStorage.setItem('assistantId','');
                localStorage.setItem('assistantName','');
                localStorage.setItem('assistantInfo','');
                axios.post(assistantApi+'/auth/password/reset',{
                    username:that.telNum1,
                    password:that.repeatPsw,
                    code:that.codeNum
                })
                    .then(function (res) {
                        if(res.data.status==200){
                            that.$alert('密码修改成功, 立即登录！', '提示', {
                                confirmButtonText: '确定',
                                type: 'success'
                            }).then(function(){
                                that.loginType=1;
                            })
                        }else{
                            that.$alert(res.data.message, '提示', {
                                confirmButtonText: '确定',
                                type:'error',
                            }).then(function () {

                            })
                        }
                    })
                    .catch(function (err) {
                        that.$alert(err.message, '提示', {
                            confirmButtonText: '确定',
                            type:'error',
                        }).then(function () {

                        })
                    })
            }
        }
    })
</script>
</body>
</html>