<script>
    import headers from '../components/Header'
    export default {
        data(){
            return{
                payWay:1,
                zfbData:'',
                dataInfo:'',
                translates:'',
                id:this.$route.params.id,
            }
        },
        mounted(){
            this.BaseSet.getToken(this)
            this.getDoctorData()
        },
        methods:{
            getDoctorData(){
                var that=this
                that.$ajax.get('/doctor/'+that.id+'/advice/1')
                .then(function(res){
                    if(res.data.status==200){
                        that.dataInfo=res.data.data
                        that.translates=res.data.data.translates
                    }else if(res.data.status==401){
                        that.BaseSet.linkLogin(that)
                    }else{
                        that.$toast(res.data.message)
                    }
                })
                .catch(function(err){
                    that.$toast(err)
                    that.BaseSet.linkLogin(that)
                })
            },
            pay(){
                if(this.payWay == 1){
                    var that = this
                    that.$ajax.post('/order',{
                        _me:'user-api',
                        title:'图文咨询',
                        money:that.dataInfo.price,
                        paytype:0,
                        body:'图文咨询',
                    })
                    .then(function(res){
                        if(res.data.status == 200){
                            that.zfbData = res.data.data
                            that.$router.push({name:'PaySuccess',params:{money:that.money}})
                        }else if(res.data.status == 401){
                            that.BaseSet.linkLogin(that)
                        }else{
                            that.$toast(res.data.message)
                            that.$router.push({name:'PayFail'})
                        }
                    })
                    .catch(function(err){
                        that.BaseSet.linkLogin(that)
                    })
                }
            }
        },
        components:{headers},
    }
</script>
