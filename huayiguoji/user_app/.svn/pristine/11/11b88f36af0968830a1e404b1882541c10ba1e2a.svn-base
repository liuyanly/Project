@charset "utf-8";
$baseFontSize:40;
/*设置单位为rem的字体大小函数*/
@function setRem($px) {
    @return $px / $baseFontSize * 1rem;
}

/*********************************
 * 标签初始化
 * *****************************/
/*全局字体缩放设置*/
html{
    font-size:40px;
}
#app{
    background: #f5f5f5!important;
    height: 100%!important;
}
.all_header{
    position: relative!important;
}
.all_header .right{
    z-index: 100;
}
//无数据样式
.noTip{
    font-size: .75rem;
    text-align: center;
    color: #444;
    line-height: 2rem /* 40/40 */;
}
body {
    font-family:Helvetica;
    -webkit-user-select:none;
    -webkit-text-size-adjust:none;
    -webkit-tap-highlight-color:transparent;
    overflow-y:auto;
    background-color: #f5f5f5;
    height: 100%!important;
}
html{
    height: 100%!important;
}
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,
blockquote,th,td,header,hgroup,nav,section,article,aside,footer,figure,figcaption,menu,button {
    margin:0;
    padding:0;
}
h1, h2, h3, h4, h5, h6 {
    font-weight: normal;
    font-style: normal;
}
ul, li, ol {
    list-style: none;
}
table{
    border-collapse: collapse;
}
/* 表单相关样式 */
input ,textarea{
    border:none;
    background: none;
    -webkit-user-select:auto;
}
button:focus,input:focus,textarea:focus{
    outline: 0;
}
::-webkit-input-placeholder {
    color:#AAA
}

img{
    vertical-align: top;
    border: none;
}
input[type="button"], input[type="submit"], input[type="reset"] {

-webkit-appearance: none;

}
button{border: 0;}
textarea {  -webkit-appearance: none;}
em,i{
    font-style: normal;
}
a {
    -webkit-touch-callout:none;
    text-decoration:none;
    outline:0
}
button:active{opacity: 0.8 !important;outline: 0;}

