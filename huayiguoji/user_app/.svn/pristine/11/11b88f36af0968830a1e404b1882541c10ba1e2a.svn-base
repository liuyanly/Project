/* 具体内容区域  */
#app{
    background:#eeeeee;
    width:100%;
    max-width: 1024px;
    display:none;
    margin:0 auto;
    position:relative;
    padding:0px;
    font-family:sans-serif;
    line-height: normal;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
/*1px边框样式*/
%border{
    /*去掉元素原有的边框 */
    position: relative;
    border: none !important;
     &:before{
         /*通过设置伪元素放大到2倍的宽高，设置1px边框，再缩小1倍，以达到0.5px边框的效果*/
        content: '';
        display: block;
        width: 200%;
        height: 200%;
        position: absolute;
        left: 0;
        top: 0;
        box-sizing: border-box;
        -webkit-transform-origin: left top;
        transform-origin: left top;
        -webkit-transform: scale(.5);
        transform: scale(.5);
        pointer-events: none;/*防止点击不到元素 */
     }
}
/*白色背景点击响应*/
@mixin activeBg($color) {
    &:active{
        background: $color;
    }
}
/* 调试按钮 */
.debug{
    background: #FF6A00;
    color: #FFF;
    position: fixed;
    bottom: 120px;
    right: 20px;
    z-index: 99999;
    font-size: 14px;
    padding: 3px 6px;
}
.hide{
    display:none !important;
}
/*清除浮动*/
.clear::after{
    content: '';
    display:block;
    width:0;
    height:0;
    visibility: hidden;
    clear:both;
}

/*两端对齐*/
.text_justify{
    text-align: justify;
    text-align-last:justify;
    display: inline-block;
    white-space: initial;
}
.text_justify:after{
    content: "";
    display: inline-block;
    width:100%;
    height:0;
    overflow: hidden;
}

/*************************************
    单选(one_sel)、复选(more_sel)、开关(switch_sel)
*************************************/
.more_sel,.switch_sel{
    -webkit-appearance: none;
    vertical-align: top;
    position: relative;
    width: setRem(34);
    height: setRem(34);
}
.one_sel{
    -webkit-appearance: none;
    vertical-align: top;
    position: relative;
    width: setRem(30);
    height: setRem(30);
}
