<template>
    <div class="choose-user">
        <headers :headName='title'></headers>
        <div class="contentScollr">
        <mt-loadmore :bottom-method="loadBottom" :bottom-all-loaded="allLoaded" :auto-fill="false" ref="loadmore" bottomPullText='上拉刷新' bottomLoadingText='加载中......'>
        <ul class="order-list already-complete">
            <li class="clear" @click="serviceList(data.id)" v-for="data in dataList">
                <div class="img-box left">
                    <img :src="data.translates.avatar_img" class="head-img" />
                </div>
                <div class="left info-box">
                    <p class="name">
                        {{data.realname}}
                    </p>
                    <p class="user-info">
                        {{data.translates.sex}}&emsp;{{data.translates.age}}岁
                    </p>
                    <p class="status">
                        症状：{{data.illness}}
                    </p>
                </div>
            </li>
        </ul>
        </mt-loadmore>
    </div>
    </div>
</template>
<script>
    //导入模板
    import headers from "../components/Header.vue";
    export default {
        data (){
            return{
                type:this.$route.params.type,
                title:this.$route.params.title,
                dataList:[],
                currentPage:1,
                per_page:9,
                total_page:0,
                allLoaded:false,//分页
                topStatus:false,//分页
            }
        },
        mounted(){
            this.getDataList('/user?e_s[guard]=user&per_page='+this.per_page+'&page='+this.currentPage)
        },
        methods:{
            loadBottom() {
                this.allLoaded = true;// 若数据已全部获取完毕
                this.topStatus = 'loading';
                if(this.currentPage<this.total_page){
                    this.currentPage=this.currentPage+1
                    this.getDataList('/user?e_s[guard]=user&per_page='+this.per_page+'&page='+this.currentPage)
                    this.$refs.loadmore.onBottomLoaded();
                }
            },
            serviceList(id){
                if(this.type==1){
                    this.$router.push({name:'SetUpVip',params:{id:id}});
                }else if(this.type==2){
                    this.$router.push({name:'PatientDetail',params:{type:1,patientId:id,assistantId:this.$route.params.assistantId}});
                }else{
                    this.$router.push({name:'PatientDetail',params:{type:2,patientId:id,assistantId:this.$route.params.assistantId}});
                }
            },
            getDataList(url){
                var that=this
                that.$ajax.get(url)
                .then(function(res){
                    if(res.data.status==200){
                        for(var i=0; i<res.data.data.user.length;i++){
                            that.dataList.push(res.data.data.user[i])
                        }
                        that.total_page=res.data.data.paginate.total_page
                        if(that.currentPage==that.total_page){
                            that.allLoaded = true;// 若数据已全部获取完毕
                        }
                    }else if(res.data.status==401){
                        that.BaseSet.linkLogin(that)
                    }else{
                        that.$toast(res.data.message)
                    }
                })
                .catch(function(err){
                    that.$toast(err)
                })
            }
        },
        components: {headers},
    }
</script>
