var userAgent = navigator.userAgent,
    isAndroid = userAgent.indexOf('Android') > -1 || userAgent.indexOf('Adr') > -1,
    isiOS = !!userAgent.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/);
if (isiOS) {
    window.native = nativeWithinIOS;
} else if (isAndroid) {
    window.native = nativeWithinAndroid;
} else {
    window.native = nativeWithinPC;
}
JSON.tryParse = function(source) {
    if (typeof(source) === "string") {
        source = JSON.parse(source);
    }
    return source;
}