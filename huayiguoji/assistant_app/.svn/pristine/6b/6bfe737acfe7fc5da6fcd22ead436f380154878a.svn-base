<template>
	<div class="message-box">
		<headers headName="分配任务"></headers>
		<div class="contentScollr">
		<ul class="list-ul">
			<li class="clear" @click="chooseUser()">
				<div class="left img-box">
					<img :src="userHeadImg" />
				</div>
				<div class="left word">
					<p class="line1 clear">
						{{userName}}
					</p>
				</div>
			</li>
			<li class="clear" @click="chooseAssistant()">
				<div class="left img-box">
					<img :src="assistantHeadImg" />
					<!-- <span class="num">22</span> -->
				</div>
				<div class="left word">
					<p class="line1 clear">
						{{assistantName}}
					</p>
				</div>
			</li>
		</ul>
		</div>
		<p class="sure-btn" @click="sureBtn()">
			确认
		</p>
	</div>
</template>

<script>
//导入模板
import headers from "../components/Header.vue";
export default {
  data () {
    return {
      userName:'选择患者',
	  userHeadImg:'/src/assets/images/e22_icon1.png',
	  assistantName:'选择医助',
	  assistantHeadImg:'/src/assets/images/e22_icon2.png',
	  patientId:this.$route.params.patientId,
	  assistantId:this.$route.params.assistantId,
    }
  },
  mounted(){
	if(this.patientId!=0&&this.patientId!=''){
		this.getUserData('/user/'+this.patientId)
	}
	if(this.assistantId!=0&&this.assistantId!=''){
		this.getAssistantData()
	}
  },
  methods: {
	  chooseUser(){
		  this.$router.push({name:'ChooseUser',params:{type:2,patientId:this.patientId,assistantId:this.assistantId,title:'选择患者'}})
	  },
	 //获取医助信息
	  getAssistantData(){
		  var that=this
		  that.$ajax.get('/assistant/'+that.assistantId)
		  .then(function(res){
			  if(res.data.status==200){
				  that.assistantName=res.data.data.realname
				  that.assistantHeadImg=res.data.data.translates.avatar_img
			  }else if(res.data.status==401){
				  that.BaseSet.linkLogin(that)
			  }else{
				  that.$toast(res.data.message)
			  }
		  })
		  .catch(function(err){
			  that.$toast(err)
		  })
	  },
	  //获取患者信息
	  getUserData(url){
		  var that=this
		  that.$ajax.get(url)
		  .then(function(res){
			  if(res.data.status==200){
				  that.userName=res.data.data.realname
				  that.userHeadImg=res.data.data.translates.avatar_img
			  }else if(res.data.status==401){
				  that.BaseSet.linkLogin(that)
			  }else{
				  that.$toast(res.data.message)
			  }
		  })
		  .catch(function(err){
			  that.$toast(err)
		  })
	  },
	  //确认分配对象
	  sureBtn(){
		  if(this.assistantId==0||this.assistantId==''){
			  this.$toast('请选择医助')
			  return false
		  }
		  if(this.patientId==0||this.patientId==''){
			  this.$toast('请选择患者')
			  return false
		  }
		  this.$toast('任务分配成功')
		  this.$router.push({name:'AssistantManage'})
	  },
	  chooseAssistant(){
		  this.$router.push({name:'ChooseAssistant',params:{type:1,patientId:this.patientId,assistantId:this.assistantId}})
	  },
  },
  components: { headers},
  //请求数据接口
}
</script>

