@charset "UTF-8";
/*设置单位为rem的字体大小函数*/
/*********************************
 * 标签初始化
 * *****************************/
/*全局字体缩放设置*/
html {
  font-size: 40px;
}

body {
  font-family: Helvetica;
  -webkit-user-select: none;
  -webkit-text-size-adjust: none;
  -webkit-tap-highlight-color: transparent;
  overflow-y: auto;
  /*background-color: #f5f5f5;*/
}

body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p,
blockquote, th, td, header, hgroup, nav, section, article, aside, footer, figure, figcaption, menu, button {
  margin: 0;
  padding: 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal;
  font-style: normal;
}

ul, li, ol {
  list-style: none;
}

/* 表单相关样式 */
input, textarea {
  border: none;
  background: none;
  -webkit-user-select: auto;
}

button:focus, input:focus, textarea:focus {
  outline: 0;
}

::-webkit-input-placeholder {
  color: #AAA;
}

img {
  vertical-align: top;
  border: none;
}

input[type="button"], input[type="submit"], input[type="reset"] {
  -webkit-appearance: none;
}

button {
  border: 0;
}

textarea {
  -webkit-appearance: none;
}

em, i {
  font-style: normal;
}

a {
  -webkit-touch-callout: none;
  text-decoration: none;
  outline: 0;
}

button:active {
  opacity: 0.8 !important;
  outline: 0;
}

/* 具体内容区域  */
#app {
  background: #eeeeee;
  width: 100%;
  max-width: 750px;
  display: none;
  margin: 0 auto;
  position: relative;
  padding: 0px;
  font-family: sans-serif;
  line-height: normal;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

/*1px边框样式*/
/*白色背景点击响应*/
/* 调试按钮 */
.debug {
  background: #FF6A00;
  color: #FFF;
  position: fixed;
  bottom: 120px;
  right: 20px;
  z-index: 99999;
  font-size: 14px;
  padding: 3px 6px;
}

.hide {
  display: none !important;
}

/*清除浮动*/
.clear::after {
  content: '';
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
  clear: both;
}

/*两端对齐*/
.text_justify {
  text-align: justify;
  text-align-last: justify;
  display: inline-block;
  white-space: initial;
}

.text_justify:after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 0;
  overflow: hidden;
}

/*************************************
    单选(one_sel)、复选(more_sel)、开关(switch_sel)
*************************************/
.more_sel, .switch_sel {
  -webkit-appearance: none;
  vertical-align: top;
  position: relative;
  width: 0.85rem;
  height: 0.85rem;
}

.one_sel {
  -webkit-appearance: none;
  vertical-align: top;
  position: relative;
  width: 0.75rem;
  height: 0.75rem;
}

