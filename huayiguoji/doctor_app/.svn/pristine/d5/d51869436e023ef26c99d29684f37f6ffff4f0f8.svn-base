</template>
<script>
    //导入模板
    import headers from "../components/Header.vue";
    import smallHeader from "../components/SmallHeader.vue"
    export default {
        data (){
            return{
                smallHeaderData: ['未接受','进行中','已完成'],
                editType:this.$route.params.type,
                status:0,
                allLoaded:false,//是否为最后一页
                page:1,
                per_page:7,//每页最大数
                last:false,
                dataList:[],
            }
        },
        mounted(){
            this.BaseSet.getToken(this)
            this.getDataList()
        },
        methods:{
            loadBottom() {
                this.allLoaded = false;
                setTimeout(function() {
                    if (!this.last) {
                        this.getDataList()
                    } else {
                        this.allLoaded = true;
                    }
                    this.$refs.loadmore.onBottomLoaded();
                }, 500)
            },
            changeTypeView(num){
                this.editType=num
                this.page = 1
                this.allLoaded = false
                this.last = false
                this.dataList = []
                this.getDataList()
            },
            noAccept(id,type){
                // <!-- 视频咨询0，图文咨询2，电话咨询1 -->
                if(type == '视频咨询'){
                    this.$router.push({name:'NoAccept',params:{id:id,type:0}});
                }else if(type == '图文咨询'){
                    this.$router.push({name:'NoAccept',params:{id:id,type:2}});
                }else{
                    this.$router.push({name:'NoAccept',params:{id:id,type:1}});
                }
            },
            going(id,userId,type){
                if(type == '图文咨询'){
                    this.$router.push({name: 'graphicConsulting', params: {id:id,userId: userId,status:0}});
                }else if(type == '电话咨询'){
                    this.$router.push({name: 'toConsult', params: {id:id,userId: userId,type:0,status:0}});
                }else if(type == '视频咨询'){
                    this.$router.push({name: 'toConsult', params: {id:id,userId: userId,type:1,status:0}});
                }
            },
            complete(id,userId,type){
                if(type == '图文咨询'){
                    this.$router.push({name: 'graphicConsulting', params: {id:id,userId: userId,status:1}});
                }else if(type == '电话咨询'){
                    this.$router.push({name: 'toConsult', params: {id:id,userId: userId,type:0,status:1}});
                }else if(type == '视频咨询'){
                    this.$router.push({name: 'toConsult', params: {id:id,userId: userId,type:1,status:1}});
                }
            },
            getDataList(){
                if(this.editType == 1){
                    this.status = 2
                }else if(this.editType == 2){
                    this.status = 1
                }else{
                    this.status = 0
                }
                this.$ajax.get('/consult?per_page='+this.per_page+'&page='+this.page+'&status='+this.status)
                .then((res)=>{
                    if(res.data.status==200){
                        let data = res.data.data;
                        this.page++
                        if(data.data.length){
                            this.last = false
                            for(let i = 0;i < data.data.length;i++){
                                this.dataList.push(data.data[i])
                            }
                        }else{
                            this.last = true;
                        }
                    }
                })
                .catch((err)=>{

                })
            }
        },
        components: {headers,smallHeader},
    }
</script>
